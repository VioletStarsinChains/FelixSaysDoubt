{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SchoolShootingResearchScreening",
  "type": "object",
  "required": ["school", "incident", "screening", "outputs"],
  "properties": {
    "ingest_metadata": {
      "type": "object",
      "properties": {
        "schema_version": { "type": "string", "default": "1.0.0" },
        "generated_at": { "type": "string", "format": "date-time" },
        "agent_id": { "type": "string" },
        "run_id": { "type": "string" }
      },
      "additionalProperties": false
    },
    "school": {
      "type": "object",
      "required": ["name", "district", "city", "state"],
      "properties": {
        "name": { "type": "string" },
        "district": { "type": "string" },
        "nces_id": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string", "minLength": 2, "maxLength": 2 },
        "grades_served": { "type": "string" },
        "school_type": { "type": "string", "enum": ["public", "charter", "private", "unknown"] },
        "geo": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lon": { "type": "number" }
          },
          "additionalProperties": false
        },
        "website": { "type": "string" }
      },
      "additionalProperties": false
    },
    "incident": {
      "type": "object",
      "required": ["date", "source_refs"],
      "properties": {
        "date": { "type": "string", "format": "date" },
        "fatalities": { "type": "integer", "minimum": 0 },
        "injuries": { "type": "integer", "minimum": 0 },
        "law_enforcement_case_ids": { "type": "array", "items": { "type": "string" } },
        "source_refs": {
          "description": "URLs or identifiers for public reports of the shooting",
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "screening": {
      "type": "object",
      "required": ["funding", "procurement", "personnel", "narrative"],
      "properties": {
        "funding": {
          "type": "object",
          "properties": {
            "grants": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["funder", "program", "title", "year", "amount", "category"],
                "properties": {
                  "funder": { "type": "string", "enum": ["NIH", "NSF", "DoD", "DARPA", "ED", "CDC", "Private", "State", "Other"] },
                  "program": { "type": "string" },
                  "title": { "type": "string" },
                  "year": { "type": "integer" },
                  "amount": { "type": "number" },
                  "category": {
                    "type": "string",
                    "enum": [
                      "behavioral_tracking",
                      "neurotech_BCI",
                      "SEL_experiments",
                      "pharm_diet_intervention",
                      "surveillance_predictive",
                      "biometric_monitoring",
                      "other"
                    ]
                  },
                  "award_id": { "type": "string" },
                  "pi_or_contact": { "type": "string" },
                  "source_ref": { "type": "string" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "procurement": {
          "type": "object",
          "properties": {
            "vendors": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["vendor_name", "contract_title", "category"],
                "properties": {
                  "vendor_name": { "type": "string" },
                  "contract_title": { "type": "string" },
                  "start_year": { "type": "integer" },
                  "end_year": { "type": "integer" },
                  "category": {
                    "type": "string",
                    "enum": [
                      "edtech_platform",
                      "biometric_system",
                      "behavioral_analytics",
                      "network_surveillance",
                      "health_research_partner",
                      "testing_platform",
                      "other"
                    ]
                  },
                  "notes": { "type": "string" },
                  "source_ref": { "type": "string" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "personnel": {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "role", "link_type"],
                "properties": {
                  "name": { "type": "string" },
                  "role": { "type": "string" },
                  "link_type": {
                    "type": "string",
                    "enum": [
                      "university_lab_affiliate",
                      "contractor_employee",
                      "grant_PI_or_staff",
                      "patent_holder",
                      "publisher_on_minors",
                      "other"
                    ]
                  },
                  "affiliation": { "type": "string" },
                  "years_active": { "type": "string" },
                  "source_ref": { "type": "string" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "narrative": {
          "type": "object",
          "properties": {
            "pre_shooting_research_mentions": {
              "type": "array",
              "items": { "type": "string" }
            },
            "post_shooting_coverage_shift": {
              "type": "string",
              "enum": ["none_detected", "partial_displacement", "strong_displacement"]
            },
            "displacement_evidence_refs": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        "comparators": {
          "type": "object",
          "properties": {
            "matched_schools_examined": { "type": "integer", "minimum": 0 },
            "comparative_findings": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "outputs": {
      "type": "object",
      "required": ["risk_score", "risk_flag", "evidence_summary"],
      "properties": {
        "risk_score": { "type": "number", "minimum": 0, "maximum": 5 },
        "risk_flag": { "type": "string", "enum": ["Probable", "Possible", "Unlikely", "Indeterminate"] },
        "evidence_summary": { "type": "string" },
        "citations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "url"],
            "properties": {
              "label": { "type": "string" },
              "url": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "analyst_notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

